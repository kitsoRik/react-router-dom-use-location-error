{
  "parser": "@typescript-eslint/parser",
  "extends": ["standard"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "rules": {
    "space-before-function-paren": 0,
    "react/jsx-handler-names": 0,
    "react/jsx-fragments": 0,
    "import/export": 0,
    "semi": [2, "always"]
  }
}
